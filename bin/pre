#!/bin/bash

dir=`pwd -P`;
bin="$HOME/.node/bin";
lib="$HOME/.node/lib";
path="$lib/node_modules/thanos";

echo "";
echo "-------------------------------------------------------";
echo " thanos: would you like to preserve your config [y/n]? ";
echo "-------------------------------------------------------";
echo "";

read option;

# Check location of global installation 

if [ ! -d lib ]
then
	bin="/usr/local/bin";
	lib="/usr/local/lib";
	path="$lib/node_modules/thanos";
fi

# Check option

if [[ $option == 'y' ]]
then
	cp -f $path/config.json $bin
else
	rm -f $bin/config.json;
fi